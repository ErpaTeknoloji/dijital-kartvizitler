<body>
    <div class="container">
        <h1>üéØ QR Kod Olu≈üturucu</h1>
        
        <div class="quick-buttons">
            <div class="quick-btn" onclick="setType('url')">üåê Web Sitesi</div>
            <div class="quick-btn" onclick="setType('text')">üìù Metin</div>
            <div class="quick-btn" onclick="setType('email')">‚úâÔ∏è E-posta</div>
            <div class="quick-btn" onclick="setType('phone')">üìû Telefon</div>
            <div class="quick-btn" onclick="setType('sms')">üí¨ SMS</div>
            <div class="quick-btn" onclick="setType('wifi')">üì∂ Wi-Fi</div>
        </div>

        <div class="input-group">
            <label for="qrType">QR Kod T√ºr√º:</label>
            <select id="qrType" onchange="updateInputs()">
                <option value="url">Web Sitesi URL</option>
                <option value="text">D√ºz Metin</option>
                <option value="email">E-posta</option>
                <option value="phone">Telefon Numarasƒ±</option>
                <option value="sms">SMS</option>
                <option value="wifi">Wi-Fi Bilgileri</option>
            </select>
        </div>

        <div id="inputContainer">
            <div class="input-group">
                <label for="qrInput">Web Sitesi URL'si:</label>
                <input type="url" id="qrInput" placeholder="https://ornek.com" oninput="generateQR()">
            </div>
        </div>

        <div class="size-options">
            <div class="size-btn active" onclick="setSize(200)">K√º√ß√ºk</div>
            <div class="size-btn" onclick="setSize(300)">Orta</div>
            <div class="size-btn" onclick="setSize(400)">B√ºy√ºk</div>
        </div>

        <div class="qr-container">
            <div id="qrcode"></div>
        </div>

        <button class="btn" onclick="downloadQR()">üì• QR Kod ƒ∞ndir</button>
        <button class="btn" onclick="clearQR()">üóëÔ∏è Temizle</button>
    </div>

    <div class="notification" id="notification">
        QR kod ba≈üarƒ±yla olu≈üturuldu!
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcode/1.5.3/qrcode.min.js"></script>
    <script>
        let currentQR = null;
        let currentSize = 200;

        function setType(type) {
            document.getElementById('qrType').value = type;
            document.querySelectorAll('.quick-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            updateInputs();
        }

        function setSize(size) {
            currentSize = size;
            document.querySelectorAll('.size-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            if (currentQR) {
                generateQR();
            }
        }

        function updateInputs() {
            const type = document.getElementById('qrType').value;
            const container = document.getElementById('inputContainer');
            
            let html = '';
            
            switch(type) {
                case 'url':
                    html = `
                        <div class="input-group">
                            <label for="qrInput">Web Sitesi URL'si:</label>
                            <input type="url" id="qrInput" placeholder="https://ornek.com" oninput="generateQR()">
                        </div>
                    `;
                    break;
                case 'text':
                    html = `
                        <div class="input-group">
                            <label for="qrInput">Metin:</label>
                            <textarea id="qrInput" placeholder="Buraya metninizi yazƒ±n..." oninput="generateQR()"></textarea>
                        </div>
                    `;
                    break;
                case 'email':
                    html = `
                        <div class="input-group">
                            <label for="emailAddr">E-posta Adresi:</label>
                            <input type="email" id="emailAddr" placeholder="ornek@email.com" oninput="generateEmailQR()">
                        </div>
                        <div class="input-group">
                            <label for="emailSubject">Konu (Opsiyonel):</label>
                            <input type="text" id="emailSubject" placeholder="E-posta konusu" oninput="generateEmailQR()">
                        </div>
                        <div class="input-group">
                            <label for="emailBody">Mesaj (Opsiyonel):</label>
                            <textarea id="emailBody" placeholder="E-posta mesajƒ±" oninput="generateEmailQR()"></textarea>
                        </div>
                    `;
                    break;
                case 'phone':
                    html = `
                        <div class="input-group">
                            <label for="qrInput">Telefon Numarasƒ±:</label>
                            <input type="tel" id="qrInput" placeholder="+90 555 123 45 67" oninput="generateQR()">
                        </div>
                    `;
                    break;
                case 'sms':
                    html = `
                        <div class="input-group">
                            <label for="smsNumber">Telefon Numarasƒ±:</label>
                            <input type="tel" id="smsNumber" placeholder="+90 555 123 45 67" oninput="generateSMSQR()">
                        </div>
                        <div class="input-group">
                            <label for="smsMessage">Mesaj:</label>
                            <textarea id="smsMessage" placeholder="SMS mesajƒ±" oninput="generateSMSQR()"></textarea>
                        </div>
                    `;
                    break;
                case 'wifi':
                    html = `
                        <div class="input-group">
                            <label for="wifiSSID">Aƒü Adƒ± (SSID):</label>
                            <input type="text" id="wifiSSID" placeholder="WiFi Aƒü Adƒ±" oninput="generateWiFiQR()">
                        </div>
                        <div class="input-group">
                            <label for="wifiPassword">≈ûifre:</label>
                            <input type="password" id="wifiPassword" placeholder="WiFi ≈ûifresi" oninput="generateWiFiQR()">
                        </div>
                        <div class="input-group">
                            <label for="wifiSecurity">G√ºvenlik T√ºr√º:</label>
                            <select id="wifiSecurity" onchange="generateWiFiQR()">
                                <option value="WPA">WPA/WPA2</option>
                                <option value="WEP">WEP</option>
                                <option value="nopass">≈ûifresiz</option>
                            </select>
                        </div>
                    `;
                    break;
            }
            
            container.innerHTML = html;
            clearQR();
        }

        function generateQR() {
            const input = document.getElementById('qrInput');
            const type = document.getElementById('qrType').value;
            
            if (!input || !input.value.trim()) return;
            
            let text = input.value.trim();
            
            if (type === 'phone') {
                text = 'tel:' + text;
            }
            
            createQRCode(text);
        }

        function generateEmailQR() {
            const email = document.getElementById('emailAddr').value;
            const subject = document.getElementById('emailSubject').value;
            const body = document.getElementById('emailBody').value;
            
            if (!email) return;
            
            let mailtoLink = 'mailto:' + email;
            const params = [];
            
            if (subject) params.push('subject=' + encodeURIComponent(subject));
            if (body) params.push('body=' + encodeURIComponent(body));
            
            if (params.length > 0) {
                mailtoLink += '?' + params.join('&');
            }
            
            createQRCode(mailtoLink);
        }

        function generateSMSQR() {
            const number = document.getElementById('smsNumber').value;
            const message = document.getElementById('smsMessage').value;
            
            if (!number) return;
            
            let smsLink = 'sms:' + number;
            if (message) {
                smsLink += '?body=' + encodeURIComponent(message);
            }
            
            createQRCode(smsLink);
        }

        function generateWiFiQR() {
            const ssid = document.getElementById('wifiSSID').value;
            const password = document.getElementById('wifiPassword').value;
            const security = document.getElementById('wifiSecurity').value;
            
            if (!ssid) return;
            
            let wifiString = `WIFI:T:${security};S:${ssid};P:${password};;`;
            
            createQRCode(wifiString);
        }

        function createQRCode(text) {
            const qrContainer = document.getElementById('qrcode');
            qrContainer.innerHTML = '';
            
            QRCode.toCanvas(qrContainer, text, {
                width: currentSize,
                height: currentSize,
                colorDark: '#000000',
                colorLight: '#ffffff',
                correctLevel: QRCode.CorrectLevel.M,
                margin: 2
            }, function (error) {
                if (error) {
                    console.error(error);
                    qrContainer.innerHTML = '<p style="color: red;">QR kod olu≈üturulurken hata olu≈ütu!</p>';
                } else {
                    currentQR = qrContainer.querySelector('canvas');
                    showNotification('QR kod ba≈üarƒ±yla olu≈üturuldu!');
                }
            });
        }

        function downloadQR() {
            if (!currentQR) {
                alert('√ñnce bir QR kod olu≈üturun!');
                return;
            }
            
            const link = document.createElement('a');
            link.download = 'qr-kod.png';
            link.href = currentQR.toDataURL();
            link.click();
            
            showNotification('QR kod indirildi!');
        }

        function clearQR() {
            document.getElementById('qrcode').innerHTML = '';
            currentQR = null;
        }

        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Sayfa y√ºklendiƒüinde varsayƒ±lan inputlarƒ± ayarla
        updateInputs();
    </script>
</body>
</html>
